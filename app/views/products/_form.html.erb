<%= simple_form_for(@product, html: { class: 'form-horizontal' }) do |p| %>
<div class="row">
  <%= p.input :name %>
  <%= p.input :img_link %>
</div>
<div class="row">
  <%= p.input :description %>
</div>
  <% if is_new %>
    <%= render "new_prod_prov", p: p %>
  <% else %>
    <%= render "edit_prod_prov", p: p %>
  <% end %>

  <%= p.submit class: "btn btn-success" %>
<% end %>
